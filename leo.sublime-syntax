%YAML 1.2
---
# See http://www.sublimetext.com/docs/3/syntax.html
name: Leo
file_extensions: [ leo ]
scope: source.leo

contexts:
  main:
    - include: keywords
    - include: numbers
    - include: strings
    - include: comments

  keywords:
    - match: '\b(require|bind|native|choice|being|first|second|define|do|does|doing|function|get|giving|is|of|check-equal?|the)\b'
      scope: keyword.control.leo
    - match: '\b(boolean|number|string)\b'
      scope: entity.name.leo
    - match: '(\.|\:)'
      scope: keyword.operator.leo

  numbers:
    - match: '\b(-)?[0-9.]+\b'
      scope: constant.numeric.leo

  comments:
    - match: ';.*'
      scope: comment.leo

  strings:
    - match: '"'
      scope: punctuation.definition.string.begin.leo
      push: inside_string

  inside_string:
    - meta_include_prototype: false
    - meta_scope: string.quoted.double.leo
    - match: '\.'
      scope: constant.character.escape.leo
    - match: '"'
      scope: punctuation.definition.string.end.leo
      pop: true
